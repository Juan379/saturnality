<!DOCTYPE html>
<html>

<body>
<section class="hero is-fullheight">
  <div class="hero-body has-text-centered">

    <div class="column has-text-centered is-4 is-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="login is-centered">
      <h3 class="logo has-text-green is-size-4">SATURNALITY</h3>
      <br />
      <form>
        <div class="field">
          <div class="control">
            <input class="input is-medium is-rounded" type="email" placeholder="hello@example.com"<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input is-medium is-rounded" type="password" placeholder="**********" <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
        <br />
        <button class="button is-block is-fullwidth is-black is-medium is-rounded" type="submit">
          Sign in
        </button>
      </form>
      <br>
      <nav class="level">
        <% if devise_mapping.rememberable? %>
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        <% end %>
        <div class="level-item has-text-centered">
          <div>
            <a <%= link_to 'Create an Account', new_user_registration_path %> </a>
          </div>
        </div>
      </nav>
    </div>
      </div>
  </div>
</section>
</body>

</html>

      <% end %>



