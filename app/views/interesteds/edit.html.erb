<h1>Edit party offer</h1> <br/>

<% if (current_user && @interested.user_id == current_user.id) || ( current_user && current_user.has_role?(:admin)) %>
    <%= form_for @interested do |f| %>
        <div>
            <%= f.label :offer %>
            <%= f.text_field :offer %> 
        </div>
        <div><br/>
            <%= f.submit "Update" %>
        </div>
    <% end %>
<% else %>
    <h2> You're either not logged in or this interested isn't yours to edit. </h2>
<% end %>