<section class="section">
  <div class="container has-text-centered">
    <h2 class="title">Services</h2>
    <% if @services.empty? %>
      <h3>There are no services available .</h3>
      <% end %>
    </div>
</section>

<div class="columns is-multiline is-mobile">

    <% @services.each do |service| %>
      <div class="column is-one-quarter">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <%= service.user.image %>
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4"><%= service.user.name %></p>

              </div>
            </div>
        </div>


          <header class="card-header-title">
            <%= service.name %>
          </header>
          <div class="card-content">
            <div class="content">
              <%= service.description %>
            </div>
          </div>
          <footer class="card-footer">
            <a class="card-footer-item" <%= link_to "Show", service %></a>
            <% if current_user && current_user == service.user  %>
              <a class="card-footer-item" <%= link_to "Edit", edit_service_path(service) %></a>
              <a class="card-footer-item" <%= link_to "Delete", service, method: :delete, data: { confirm: "Do you really want to delete this Service?"} %></a>
            <% end %>
            <% if current_user && current_user.has_role?(:admin) %>
              <a class="card-footer-item" <%= link_to "Edit", edit_service_path(service) %></a>
              <a class="card-footer-item" <%= link_to "Delete", service, method: :delete, data: { confirm: "Do you really want to delete this Service?"} %></a>
            <% end %>
          </footer>
        </div>
      </div>
    <% end %>

</div>
</html>








