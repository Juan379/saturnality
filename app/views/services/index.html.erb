<section class="section">
  <div class="container has-text-centered" data-aos="fade-in">
    <h2 class="title is-size-1">Services</h2>
    <% if @services.empty? %>
      <h3 class="subtitle is-size-5"> There are no services available.</h3>
    <% end %>
  </div>
</section>

<div class="columns is-multiline is-mobile">

  <% @services.each do |service| %>
    <div class="column is-one-quarter ">
      <div class="card">
        <header class="card-header-title is-size-3">
          <%= service.name %>
        </header>
        <div class="card-content">
          <div class="content">
            <%= service.description %>
            <br>
            Rating: <%= service.rating %>
          </div>
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <%= image_tag('picture.png') %>
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4"><%= service.user.name %></p>
            </div>
          </div>
        </div>


        <footer class="card-footer">
          <a class="card-footer-item" <%= link_to "More", service %></a>
          <% if current_user && current_user == service.user  %>
            <a class="card-footer-item" <%= link_to "Edit", edit_service_path(service) %></a>
            <a class="card-footer-item" <%= link_to "Delete", service, method: :delete, data: { confirm: "Do you really want to delete this Service?"} %></a>
          <% end %>
          <% if current_user && current_user.has_role?(:admin) %>
            <a class="card-footer-item" <%= link_to "Edit", edit_service_path(service) %></a>
            <a class="card-footer-item" <%= link_to "Delete", service, method: :delete, data: { confirm: "Do you really want to delete this Service?"} %></a>
          <% end %>
        </footer>
      </div>
    </div>

  <% end %>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="../js/showcase.js"></script>
<link href="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.css" rel="stylesheet">
<script src="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.js"></script>
<script>
    AOS.init({
        easing: "ease-out",
        duration: 800,
    });
</script>
</html>








