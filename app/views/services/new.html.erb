<% if current_user %>
<section class="hero is-fullheight">
  <div class="column has-text-left is-3 is-offset-1">
    <%= form_for @service do |f| %> <br/>
      <div class="Edit is-centered">
        <h3 class="logo has-text-green is-size-4">New Service Application Form</h3> <br/>
        <form>
          <div class="field is-size-5">
            <%= f.label :name %> <br/>
            <div class="control">
              <input class="input is-medium is-squared" <%= f.text_field :name %>
            </div>
          </div> <br/>
          <div class="field is-size-5">
            <%= f.label :description %> <br/>
            <div class="control">
              <input class="input is-medium is-squared"<%= f.text_area :description %>
            </div>
          </div> <br/>
          <div class="field is-size-5">
            <%= f.label :capacity %><br />
            <div class="control">
              <input class="input is-medium is-squared"<%= f.number_field :capacity %>
            </div>
          </div> <br/>
          <div class="field is-size-5">
            <%= f.label :price %><br />
            <div class="control">
              <input class="input is-medium is-squared"<%= f.number_field :price %>
            </div><br/>
          </div> <br/>
          <div class="field is-size-5">
            <%= f.label :rating %><br />
            <div class="control">
              <input class="input is-medium is-squared"<%= f.number_field :rating, min: 1, max: 5, step: 0.01 %>
            </div>
          </div> <br/>
          <div class="field is-size-5">
            <%= fields_for(@coverages) do |c| %>
              <div>
                <%= c.label "Comunas it covers" %><br />
                <%= collection_select(:comunas, :id, @all_comunas, :id, :name, {}, {:multiple => true}) %>
              </div>
            <% end %>
          </div> <br/>
          <button class="button is-block is-fullwidth is-black is-medium is-rounded" type="submit">
            Submit!
          </button>
        </form> <br>
      </div>
    <% end %>
  </div>
</section>
<% end %>
