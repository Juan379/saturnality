<h1>Service Review</h1>
<%= link_to "Back", scomments_url %> <br/><br/>

<% if current_user %>
  <%= form_for @scomment do |f| %>
    <div>
      <%= f.label :content %>
      <%= f.text_field :content %>
    </div>
    <%= fields_for(@all_services) do |c| %>
      <div>
        <%= c.label "Service" %><br />
        <%= collection_select(:service, :id, Service.all, :id, :name, {include_blank: true}, {:multiple => false}) %>
      </div>

    <% end %>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
<% else %>
  <h2>You need to be logged in to create a review.</h2>
<% end %>