<% if !current_user %>
<!DOCTYPE html>
  <html lang="en">
  <head>
    <title>Saturnality!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <script src="https://use.fontawesome.com/0ec7801840.js"></script>

    <%= favicon_link_tag asset_path('saturn_favicon.png') %>
  </head>

  <% else %>

  <head>
    <title>Saturnality!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <link rel="stylesheet" type="text/css" href="../css/showcase.css" />
    <script
      src="https://kit.fontawesome.com/2828f7885a.js"
      integrity="sha384-WAsFbnLEQcpCk8lM1UTWesAf5rGTCvb2Y+8LvyjAAcxK1c3s5c0L+SYOgxvc6PWG"
      crossorigin="anonymous"
    ></script>
    <link rel="icon" type="image/png" href="favicon.png" />
    <script src="https://use.fontawesome.com/0ec7801840.js"></script>
    <%= favicon_link_tag asset_path('saturn_favicon.png') %>
  </head>

  <!-- Hero -->

  <section id="hero" class="hero is-medium" >
    <div class="hero-head">

      <nav class="navbar is-white">
        <div class="container" >
          <div class="navbar-brand">
            <a class="navbar-item is-size-4" <%= link_to "SATURNALITY", static_pages_home_url  %> </a>
            </div>

          <div class="navbar-menu">
            <div id="navbarBasicExample" class="navbar-menu">
              <div class="navbar-start">

                <div class="navbar-item has-dropdown is-hoverable">
                  <a class="navbar-link">
                    How it works
                  </a>

                  <div class="navbar-dropdown">
                    <a class="navbar-item" <%= link_to 'About parties', static_pages_about_parties_url %>
                    </a>
                    <a class="navbar-item" <%= link_to "About services", static_pages_about_services_url %>
                    </a>
                  </div>
                </div>

                <div class="navbar-item has-dropdown is-hoverable">
                  <a class="navbar-link">
                    Parties
                  </a>

                  <div class="navbar-dropdown">
                    <a class="navbar-item" <%= link_to 'Search for a party', parties_url %>
                    </a>
                    <a class="navbar-item" <%= link_to "Create party", new_party_url %>
                    </a>
                    <hr class="navbar-divider">
                    <strong><p class="navbar-item"> My Parties</p></strong>
                    <a class="navbar-item" <%= link_to "Created", mypartiesshow_path %> </a>
                    <a class="navbar-item" <%= link_to "Pending acceptance", myinterestedshow_path %> </a>
                    <a class="navbar-item" <%= link_to "Accepted to", myattendanceshow_path %> </a>
                  </div>
                </div>

                <div class="navbar-item has-dropdown is-hoverable">
                  <a class="navbar-link">
                    Services
                  </a>

                  <div class="navbar-dropdown">
                    <a class="navbar-item" <%= link_to 'View services', services_url %>
                    </a>
                    <a class="navbar-item" <%= link_to "Create service", new_service_url %>
                    </a>
                    <hr class="navbar-divider">
                    <strong><p class="navbar-item"> My Services</p></strong>
                    <a class="navbar-item" <%= link_to "Pending acceptance", mypservicesshow_path %> </a>
                    <a class="navbar-item" <%= link_to "Accepted", myaservicesshow_path %> </a>
                  </div>
                </div>


              </div>
              <div class="navbar-end">
                <% if current_user.has_role?(:admin) %>
                  <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                      Admin
                    </a>

                    <div class="navbar-dropdown">
                      <a class="navbar-item" <%= link_to 'Service applications', admin_path %>
                      </a>
                    </div>
                  </div>
                <% end %>

                <div class="navbar-item has-dropdown is-hoverable">
                  <a class="navbar-link">
                    Profile
                  </a>

                  <div class="navbar-dropdown is-right">

                    <a class="navbar-item" <%= link_to "View Profile", user_path(current_user.id) %> </a>
                    <a class="navbar-item" <%= link_to "Edit Profile", edit_user_registration_path %> </a>
                    <hr class="navbar-divider">
                    <a class="navbar-item"
                    <%= link_to "Log Out", destroy_user_session_path, :method => :delete %> </a>

                  </div>
                </div>
              </div>
            </div>
        </div>
        </div>
      </nav>
    </div>
  </section>

  <!-- END Hero -->


  <br/><br/><br/>


<% end %>
<%= yield %>

<div class="footer">
  <p>
    <strong class="white"> <%= link_to 'SATURNALITY', static_pages_home_url %></strong> made with âš¡ by @Juan379, @victoriapsb, and @MINGOD24 
</div>

</html>




